<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="pane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.curiousoddman.curious_tunes.controller.LibraryArtistAlbumController">
    <left>
      <StackPane onMouseEntered="#onAlbumImageHover" onMouseExited="#onAlbumImageUnhover" BorderPane.alignment="CENTER">
         <children>
              <ImageView fx:id="albumImage" fitHeight="350.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/noimage.png" />
               </image>
            </ImageView>
            <ImageView fx:id="playImageButton" fitHeight="200.0" fitWidth="200.0" onMouseClicked="#onPlayImageClicked" opacity="0.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/album-play-button.png" />
               </image>
            </ImageView>
         </children>
      </StackPane>
    </left>
   <center>
          <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="TOP_LEFT">
              <children>
                  <Label fx:id="albumTitle" text="Red Hot Chile Peppers" VBox.vgrow="NEVER">
                      <font>
                          <Font size="24.0" />
                      </font>
                  </Label>
                  <Label fx:id="albumDetails" layoutX="10.0" layoutY="10.0" text="Pop/Rock   2000" VBox.vgrow="NEVER">
                      <font>
                          <Font size="14.0" />
                      </font>
                  </Label>
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox fx:id="tracksLeftColumnVbox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </padding>
                  </VBox>
                  <VBox fx:id="tracksRightColumnVbox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
              </children>
          </VBox>
   </center>
</BorderPane>
