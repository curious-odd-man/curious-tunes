<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.curiousoddman.curious_tunes.controller.LibraryArtistAlbumController">
    <left>
        <ImageView fx:id="albumImage" fitHeight="350.0" fitWidth="350.0" onMouseEntered="#onAlbumImageHover"
                   onMouseExited="#onAlbumImageUnhover" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER"/>
    </left>
    <center>
        <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <top>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="albumTitle" text="Red Hot Chile Peppers">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Label fx:id="albumDetails" layoutX="10.0" layoutY="10.0" text="Pop/Rock   2000">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </top>
            <center>
                <GridPane fx:id="albumTracksGrid" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                          BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>
